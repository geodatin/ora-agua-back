        "/observation/timeSeries/{network}/{stationCode}/{dataType}/{frequency}": {
            "get": {
                "tags": [
                    "Observation"
                ],
                "parameters": [
                    {
                        "name": "network",
                        "in": "path",
                        "description": "Network to be used for the observation",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "rha",
                                "rqa",
                                "hybam"
                            ]
                        }
                    },
                    {
                        "name": "stationCode",
                        "in": "path",
                        "description": "Station code to filter the data",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    },
                    {
                        "name": "dataType",
                        "in": "path",
                        "description": "Data type for the selected network",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "rain",
                                "flowRate",
                                "level",
                                "raw"
                            ]
                        }
                    },
                    {
                        "name": "frequency",
                        "in": "path",
                        "description": "Station code to filter the data",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "hour",
                                "day",
                                "week",
                                "month",
                                "quarter",
                                "year"
                            ]
                        }
                    },
                    {
                        "name": "format",
                        "in": "path",
                        "description": "response output format",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "csv",
                                "json"
                            ]
                        }
                    },
                    {
                        "name": "allTime",
                        "in": "query",
                        "description": "if the response should return all data",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "true",
                                "false"
                            ]
                        }
                    }
                ],
                "summary": "Get time series observation from specified station",
                "description": "Get time series observation from specified station",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "x": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "2021-12-21T02:00:00.000Z",
                                                "2021-12-21T01:00:00.000Z",
                                                "2021-12-21T00:00:00.000Z",
                                                "2021-12-20T23:00:00.000Z",
                                                "2021-12-20T22:00:00.000Z"
                                            ]
                                        },
                                        "y": {
                                            "type": "array",
                                            "items": {
                                                "type": "number",
                                                "example": 7794285.69
                                            },
                                            "example": [
                                                7794285.69,
                                                7947833.43,
                                                9010518.08,
                                                8857033.11,
                                                8962340.42
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
